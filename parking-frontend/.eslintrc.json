{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-var": "error",
        "prefer-const": "error",
        "prefer-arrow-callback": "warn",
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": "error",
        "brace-style": [
            "error",
            "1tbs"
        ],
        "space-infix-ops": "error",
        "space-before-blocks": "error",
        "keyword-spacing": "error",
        "comma-spacing": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "func-call-spacing": [
            "error",
            "never"
        ],
        "key-spacing": "error",
        "no-trailing-spaces": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "no-multi-spaces": "error",
        "no-spaced-func": "error",
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-mixed-spaces-and-tabs": "error",
        "no-unexpected-multiline": "error",
        "quotes": [
            "error",
            "single"
        ]
    }
}